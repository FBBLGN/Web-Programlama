@model IndirimKuponum.Models.Indirimler

@{
    ViewData["Title"] = "Details";

}


<h1>@Model.Baslik</h1>
<hr />
<p>
    <span class="glyphicon glyphicon-time"></span>
    @Model.EklenmeTarihi
</p>
<hr />
<img class="img-responsive" src="https://image.shutterstock.com/image-vector/default-ui-image-placeholder-wireframes-260nw-1037719192.jpg" alt="" />
<hr />
<blockquote>
    <p>@Model.Aciklama</p>
</blockquote>
<p>
    @Model.Icerik
</p>

<div class="comment">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="YorumEkle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" >
                    <label asp-for="@Model.Yorum.KullaniciAdi" class="control-label" ></label>
                    <input asp-for="@Model.Yorum.KullaniciAdi" class="form-control" style="width:300px;height:50px;" />
                    <span asp-validation-for="@Model.Yorum.KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="form-group" >
                    <label asp-for="@Model.Yorum.YorumText" class="control-label"></label>
                    <input asp-for="@Model.Yorum.YorumText" class="form-control" style="width:700px;height:150px;" />
                    <span asp-validation-for="@Model.Yorum.YorumText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin")|| User.IsInRole("User"))
                        {
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        }
                    }
                    else
                    {
                       <a href="/Identity/Account/Register/">Yorum Yazmak İçin Üye Olun</a>
                    }

                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="media">
        
        <div class="media-body">
            <h5 class="mt-0">@Html.ActionLink("Yorumları Görmek İçin Tıklayınız", "List", "Yorum")</h5>
            

        </div>
    </div>

</div>
<div>

    <a asp-controller="Home" asp-action="Index">Listeye Dön</a>
</div>

@section SagKolon{
    @Html.Partial("Search")

<div class="well">
    <h4>İndirim Kategorileri</h4>
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/1">Giyim</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/2">Seyehat</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/3">Eğlence</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/4">Eğitim</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/5">Yemek</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/6">Aksesuar</a>
                </li>
            </ul>
        </div>
    </div>
</div>
}
