@model IEnumerable<IndirimKuponum.Models.IndirimlerModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning"><h3>Kayıt Bulunamadı</h3></div>
}
else
{

    foreach (var Indirim in Model)
    {
        <div class="indirim">
            <h3 class="page-header">
                @Indirim.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @Indirim.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">
            <hr />
            <p>
                @Indirim.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Indirimler", new { id = Indirim.Id }, new { @class = "btn btn-primary" })

        </div>
    }
}
